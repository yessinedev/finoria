    "start": "next start",
    "start:next": "next start -p 3000",
    "lint": "next lint",
    "lint:skip": "echo \"ESLint skipped\"",
    "electron-dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "rebuild": "electron-rebuild",
    "pack": "npm run build && electron-builder --dir",
    "build:next": "next build",
    "build:electron": "electron-builder --win",
    "prepare:resources": "node scripts/prepare-build.js",
    "dist": "npm run build:next && npm run build:electron",
    "deploy": "echo 'Use GitHub Actions for deployment'",
    "postinstall": "electron-builder install-app-deps"
