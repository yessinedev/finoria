{
  "appId": "com.finoria.app",
  "productName": "Finoria",
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*", 
    "public/electron.js", 
    "public/preload.js",
    "!node_modules/.cache/**/*"
  ],
  "extraResources": [
    {
      "from": "database.db",
      "to": "database.db"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}