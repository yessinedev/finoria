{
  "appId": "com.ventepro.app",
  "productName": "VentePro",
  "directories": {
    "output": "dist"
  },
  "files": ["out/**/*", "public/electron.js", "public/preload.js", "node_modules/**/*", "!node_modules/.cache/**/*"],
  "extraResources": [
    {
      "from": "database.db",
      "to": "database.db"
    }
  ],
  "mac": {
    "category": "public.app-category.business",
    "target": "dmg"
  },
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
