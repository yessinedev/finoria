{
  "appId": "com.finoria.app",
  "productName": "Finoria",
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*",
    "main/electron.js",
    "main/preload.js",
    "main/sql-schema.js",
    "main/icon.png",
    "main/icon.ico",
    "main/ipc-handlers/**/*",
    "!node_modules/.cache/**/*"
  ],
  "extraResources": [
    {
      "from": "database.db",
      "to": "database.db"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
